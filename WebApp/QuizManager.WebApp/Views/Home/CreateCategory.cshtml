@model QuizManager.WebApp.Models.CategoryViewModel

@{
    ViewData["Title"] = "CreateCategory";
}

<h2>CreateCategory</h2>

<h4>CategoryViewModel</h4>
<hr />
<div class="row">
    <div class="col-lg-12">
        <form asp-action="CreateCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
