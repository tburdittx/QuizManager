@model QuizManager.WebApp.Models.QuestionsViewModel

@{
    ViewData["Title"] = "EditQuestion";
}

<h2>Edit the Question</h2>

<hr />
<div class="row">
    <div class="col-lg-12">
        <form asp-action="EditQuestion">
